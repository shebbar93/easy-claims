{
  "name": "easy-claims",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "hono": "^4.8.2",
      "@trpc/server": "^11.7.2",
      "@trpc/client": "^11.7.2",
      "@libsql/client": "0.15.15",
      "libsql": "0.5.22"
    }
  },
  "type": "module",
  "scripts": {
    "check": "biome check --write .",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @easy-claims/db db:push",
    "db:studio": "turbo -F @easy-claims/db db:studio",
    "db:generate": "turbo -F @easy-claims/db db:generate",
    "db:migrate": "turbo -F @easy-claims/db db:migrate",
    "db:local": "turbo -F @easy-claims/db db:local"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:",
    "@easy-claims/env": "workspace:*"
  },
  "devDependencies": {
    "turbo": "^2.6.3",
    "@biomejs/biome": "^2.2.0",
    "typescript": "catalog:",
    "@types/bun": "catalog:",
    "@easy-claims/config": "workspace:*"
  },
  "packageManager": "bun@1.2.17"
}
